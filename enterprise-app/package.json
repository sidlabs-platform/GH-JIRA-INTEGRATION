{
  "name": "gh-jira-enterprise-app",
  "version": "1.0.0",
  "description": "Enterprise GitHub App: Centralized Security-to-Jira Integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "github",
    "jira",
    "security",
    "enterprise",
    "github-app",
    "code-scanning",
    "automation"
  ],
  "license": "MIT",
  "dependencies": {
    "@octokit/auth-app": "^7.1.0",
    "@octokit/rest": "^20.0.2",
    "axios": "^1.7.0",
    "axios-retry": "^4.0.0",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "@azure/cosmos": "^4.1.0",
    "@azure/identity": "^4.4.0",
    "@azure/keyvault-secrets": "^4.8.0",
    "@azure/service-bus": "^7.9.0",
    "applicationinsights": "^3.3.0",
    "helmet": "^8.0.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
